generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  userId    String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  name      String?
  userName  String   @unique
  password  String
  Train     Train[]
}

model Train{
  trainId     Int       @id @default(autoincrement())
  trainName   String
  origin      String
  destination String
  departure   String
  arrival     String
  userId      String    @db.Uuid
  User        User      @relation(fields: [userId], references: [userId])
  Tickets     Tickets[]
}

model Tickets{
  ticketId    Int      @id @default(autoincrement())
  passengerName String
  seatNumber    String
  trainId       Int
  class         Class
  dateOfJourney DateTime
  dateOfBooking DateTime @default(now())
  Train         Train    @relation(fields: [trainId], references: [trainId])
  bookinStatus  Status
}

enum Status {
  CONFIRM
  CANCELLED
  RAC
  WAITLIST

}

enum Class{
  THIRD_AC
  SECOND_AC
  FIRST_AC
  SLEEPER
  CHAIR_CAR
  GENERAL
}