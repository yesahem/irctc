generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   String    @id @default(uuid()) @db.Uuid
  age      String
  email    String    @unique
  name     String?
  userName String    @unique
  password String
  Tickets  Tickets[]
}

model Train {
  trainId     String    @id @default(uuid()) @db.Uuid
  trainName   String
  origin      String
  destination String
  departure   String
  arrival     String
  userId      String
  // User        User      @relation(fields: [userId], references: [userId])
  Tickets     Tickets[]
}

model Tickets {
  ticketId      String   @id @default(uuid()) @db.Uuid
  passengerName String
  seatNumber    String
  trainId       String @db.Uuid
  class         Class
  dateOfJourney DateTime
  dateOfBooking DateTime @default(now())
  userId        String   @db.Uuid
  Train         Train    @relation(fields: [trainId], references: [trainId])
  user          User     @relation(fields: [userId], references: [userId])
  bookingStatus Status
}

enum Status {
  CONFIRM
  CANCELLED
  RAC
  WAITLIST
}

enum Class {
  THIRD_AC
  SECOND_AC
  FIRST_AC
  SLEEPER
  CHAIR_CAR
  GENERAL
}
